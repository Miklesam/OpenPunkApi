<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_marginEnd="@dimen/card_padding"
    android:layout_marginStart="@dimen/card_padding"
    android:layout_marginTop="@dimen/card_padding"
    app:cardElevation="@dimen/card_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/big_card_padding"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/preImageCategory"
            android:layout_height="@dimen/preImageCategory"
            android:id="@+id/category_image"
            android:src="@drawable/ic_launcher_background">

        </de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="@string/title_category"
            android:layout_marginStart="@dimen/big_card_padding"
            android:textSize="@dimen/beer_title_text_size"
            android:id="@+id/category_Title">

        </TextView>

    </LinearLayout>

</androidx.cardview.widget.CardView>